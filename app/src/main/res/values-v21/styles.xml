<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/shared_article
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/shared_article
        </item>
    </style>

    <style name="TextView">
        <item name="android:layout_marginBottom">@dimen/small</item>
    </style>

    <style name="RvItem">
        <item name="android:paddingStart">@dimen/small</item>
        <item name="android:paddingEnd">@dimen/small</item>
        <item name="android:paddingTop">@dimen/small</item>
    </style>

    <style name="ArticlePicture">
        <item name="android:layout_marginBottom">@dimen/middle</item>
    </style>
</resources>